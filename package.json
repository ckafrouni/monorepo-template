{
	"name": "better-t-stack-1",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"clean": "turbo clean && rm -rf .turbo node_modules .cache",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss,yml,yaml,html}\"",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:desktop": "turbo -F desktop dev",
		"dev:server": "turbo -F server dev",
		"build:web": "turbo -F web build",
		"build:desktop": "turbo -F desktop build",
		"db:push": "turbo -F @zentio/db db:push",
		"db:studio": "turbo -F @zentio/db db:studio",
		"db:generate": "turbo -F @zentio/db db:generate",
		"db:migrate": "turbo -F @zentio/db db:migrate"
	},
	"dependencies": {},
	"devDependencies": {
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"turbo": "^2.4.2"
	},
	"packageManager": "pnpm@10.7.1"
}
