{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"clean": "rm -rf dist .cache node_modules .turbo",
		"build": "tsc && tsc-alias",
		"check-types": "tsc --noEmit",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "pnpm with-env tsx watch src/index.ts",
		"start": "pnpm with-env node dist/src/index.js",
		"db:push": "pnpm with-env drizzle-kit push",
		"db:studio": "pnpm with-env drizzle-kit studio",
		"db:generate": "pnpm with-env drizzle-kit generate",
		"db:migrate": "pnpm with-env drizzle-kit migrate",
		"with-env": "dotenv -e ../../.env --"
	},
	"dependencies": {
		"@ai-sdk/google": "^1.2.3",
		"@ai-sdk/openai": "^1.3.22",
		"@hono/node-server": "^1.14.0",
		"@hono/trpc-server": "^0.3.4",
		"@t3-oss/env-core": "^0.13.6",
		"@trpc/client": "^11.0.0",
		"@trpc/server": "^11.0.0",
		"@worspace/api": "workspace:*",
		"@worspace/auth": "workspace:*",
		"@worspace/db": "workspace:*",
		"@worspace/env": "workspace:*",
		"ai": "^4.3.16",
		"better-auth": "^1.2.8",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.4",
		"hono": "^4.7.6",
		"pg": "^8.14.1",
		"zod": "^3.25.16"
	},
	"devDependencies": {
		"@types/node": "^22.13.11",
		"@types/pg": "^8.11.11",
		"dotenv-cli": "^8.0.0",
		"drizzle-kit": "^0.30.5",
		"tsc-alias": "^1.8.11",
		"tsx": "^4.19.2",
		"typescript": "^5.8.2"
	}
}
